{
  "name": "Abrakadabra",
  "version": "0.0.0.2",
  "manifest_version": 1,
  "description": "Very useful extension",
  "browser_action": { 
  "default_title": "Abrakadabra", 
  "default_icon": "images/icon.ico",
  "default_popup": "popup.html"
 	},
  "permissions": [
  "tabs", 
  "https://gmail.com/*", 
  "https://mail.google.com/*",
  "http://vk.com/*",
  "*.vk.com/*",
  "*.fb.com/*",
  "*.facebook.com/*",
  "http://fb.com/*",
  "http://facebook.com/*",
  "https://imo.im/*"
   ],
   "content_scripts": [ {
    "matches": ["https://gmail.com/*", 
  				"https://mail.google.com/*",
				  "http://vk.com/*",
				  "http://*.vk.com/*",
				  "http://*.fb.com/*",
				  "http://*.facebook.com/*",
				  "http://fb.com/*",
				  "http://facebook.com/*",
				  "https://imo.im/*"],
	"js": [
		"abra_library.js",
		"abrakadabra.js",
		"background.js"
		
	]}]
}